@model E_Learning_Platform.Models.course

@{
    ViewBag.Title = "Add New Course";
}

<style>
    body {
        background: #f5f7fa;
    }

    .card-form {
        border-radius: 18px;
        background: #fff;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        max-width: 750px;
        margin: auto;
        margin-top: 25px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .upload-box {
        border: 2px dashed #0d6efd;
        padding: 25px;
        text-align: center;
        border-radius: 14px;
        background: #eef5ff;
        cursor: pointer;
        transition: 0.3s;
    }

        .upload-box:hover {
            background: #dceaff;
        }

    #previewImg {
        margin-top: 15px;
        height: 150px;
        object-fit: cover;
        display: none;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
</style>

<div class="card-form">
    <h3 class="text-center mb-4 fw-bold">Add New Course</h3>

    @using (Html.BeginForm("AddCourse", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-semibold">Course Title</label>
            @Html.TextBoxFor(m => m.title, new { @class = "form-control", placeholder = "Enter course title" })
            @Html.ValidationMessageFor(m => m.title, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Description</label>
            @Html.TextAreaFor(m => m.description, new { @class = "form-control", placeholder = "Enter description", rows = 4 })
            @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Duration (Months)</label>
                @Html.TextBoxFor(m => m.duretion, new { @class = "form-control", placeholder = "Example: 12" })
                @Html.ValidationMessageFor(m => m.duretion, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Course Fee</label>
                @Html.TextBoxFor(m => m.course_fee, new { @class = "form-control", placeholder = "Enter fees" })
                @Html.ValidationMessageFor(m => m.course_fee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3">
            @*<label class="form-label fw-semibold">Created Date</label>*@
           @* @Html.TextBoxFor(m => m.created_at, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.created_at, "", new { @class = "text-danger" })*@
        </div>
        <div class="mb-3">
            <label class="form-label fw-semibold">Upload Course Image</label>

            <div class="upload-box" onclick="document.getElementById('imageFile').click();">
                <span class="text-primary fw-bold">Click to upload image</span>
            </div>

            <input type="file" name="imageFile" id="imageFile" class="form-control d-none" accept="image/*" onchange="previewImage(event)" />

            <img id="previewImg" />
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-semibold" style="border-radius:10px">
            Add Course
        </button>
    }
</div>

<script>
    function previewImage(event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById("previewImg");
            output.src = reader.result;
            output.style.display = "block";
        };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>
