

@model E_Learning_Platform.Models.ViewModel.UserModel
@{
    ViewBag.Title = "Registration";
}
<head>
    <link href="~/Content/Register.css" rel="stylesheet" />
</head>
<div>
    @using (Html.BeginForm("Register", "Login", "Post"))
    {
        @Html.AntiForgeryToken()
        <div class=" gap-3 d-flex flex-column align-items-center pb-2 pt-2 border-2 rounded-2 border-dark reg">
            <h4>Registration</h4>
            <div class="container w-75 ">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Register As</label>
                    <div class="w-100">
                        @Html.DropDownListFor(m => m.Role, ViewBag.roles as SelectList, "--Select Role--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="container w-75">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Name</label>
                    <div class="w-100">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="container w-75">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Gmail</label>
                    <div class="w-100">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="container w-75">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Mobile Number</label>
                    <div class="w-100">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="container w-75">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Password</label>
                    <div class="w-100">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="container w-75">
                <label class="d-block text-danger">@TempData["warning"]</label>
                <div class="w-100 d-sm-block d-lg-flex">
                    <label for="role" class="w-50">Repeat Password</label>
                    <div class="w-100">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div>
                <button class="btn btn-primary">Register</button>
            </div>

        </div>

    }
</div>
<style>
    .reg {
        backdrop-filter: blur(200px);
        background-color: rgba(128, 128, 128,0.2);
        border: 1px solid black;
        width: 50%;
    }

    form {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
    }
</style>

