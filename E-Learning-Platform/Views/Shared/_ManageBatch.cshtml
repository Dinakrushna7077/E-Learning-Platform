<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold m-0">
            <i class="bi bi-layers-fill text-primary me-2"></i>Manage Batches
        </h3>

        <button class="btn btn-primary px-4 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#addBatchModal">
            <i class="bi bi-plus-circle me-1"></i> Add Batch
        </button>
    </div>

    <!-- Search + Filter Section -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body row g-3">
            <div class="col-md-4">
                <input type="text" class="form-control form-control-lg" placeholder="Search batch...">
            </div>

            <div class="col-md-4">
                <select class="form-select form-select-lg">
                    <option disabled selected>Filter by Course</option>
                    <option>Computer Science</option>
                    <option>Mathematics</option>
                    <option>Physics</option>
                </select>
            </div>

            <div class="col-md-2">
                <select class="form-select form-select-lg">
                    <option disabled selected>Status</option>
                    <option>Active</option>
                    <option>Inactive</option>
                </select>
            </div>

            <div class="col-md-2">
                <button class="btn btn-dark w-100 btn-lg">
                    <i class="bi bi-funnel"></i> Apply
                </button>
            </div>
        </div>
    </div>

    <!-- Batch List -->
    <div class="row g-4">

        <!-- Batch Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 batch-card">
                <div class="card-body">

                    <div class="d-flex justify-content-between mb-2">
                        <h5 class="fw-bold mb-0">Batch A1</h5>
                        <span class="badge bg-success rounded-pill px-3 py-2">Active</span>
                    </div>

                    <p class="text-muted small mb-2">
                        Course: <strong>Computer Science</strong>
                    </p>

                    <p class="text-muted small mb-3">
                        Start: <strong>01 Jan 2025</strong>
                        <br>
                        End: <strong>30 Jun 2025</strong>
                    </p>

                    <!-- Footer -->
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-secondary small">
                            Students: <strong>45</strong>
                        </span>

                        <div>
                            <button class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Duplicate above card for more batches -->

    </div>
</div>


<!-- Add Batch Modal -->
<div class="modal fade" id="addBatchModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content shadow-lg border-0">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle me-1"></i>Add New Batch</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body row g-3 p-4">

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Batch Name</label>
                    <input type="text" class="form-control form-control-lg" placeholder="e.g., Batch A1">
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Course</label>
                    <select class="form-select form-select-lg">
                        <option disabled selected>Select course</option>
                        <option>Computer Science</option>
                        <option>Mathematics</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Start Date</label>
                    <input type="date" class="form-control form-control-lg">
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">End Date</label>
                    <input type="date" class="form-control form-control-lg">
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <select class="form-select form-select-lg">
                        <option>Active</option>
                        <option>Inactive</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Max Students</label>
                    <input type="number" class="form-control form-control-lg" placeholder="e.g., 60">
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary px-4" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary px-4">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Hover Animation -->
<style>
    .batch-card:hover {
        transform: translateY(-6px);
        transition: .3s;
        box-shadow: 0px 6px 20px rgba(0,0,0,0.15) !important;
    }
</style>
