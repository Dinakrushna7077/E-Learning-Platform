<!-- Add Payment Modal -->
<div class="modal fade" id="addPaymentModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content shadow-lg border-0">

            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Add New Payment</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4 row g-3">

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Student</label>
                    <select class="form-select form-select-lg">
                        <option disabled selected>Select student</option>
                        <option>Dinesh Kumar</option>
                        <option>Arun Pradhan</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Course</label>
                    <select class="form-select form-select-lg">
                        <option disabled selected>Select course</option>
                        <option>Python</option>
                        <option>C Programming</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Amount</label>
                    <input type="number" class="form-control form-control-lg" placeholder="Enter amount">
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Payment Mode</label>
                    <select class="form-select form-select-lg">
                        <option>Cash</option>
                        <option>UPI</option>
                        <option>Net Banking</option>
                        <option>Card</option>
                    </select>
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Remarks</label>
                    <textarea class="form-control" rows="3" placeholder="Optional"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-success px-4">Save Payment</button>
            </div>
        </div>
    </div>
</div>

